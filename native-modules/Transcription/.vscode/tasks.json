            "type": "shell",
            "command": "mkdir",
            "args": [
                "-p",
                "../../bin/Linux_x86/"
            ]
        },
        {
            "label": "build transcrLUSS",
            "identifier": "build transcrLUSS",
            "type": "shell",
            "command": "g++",
            "args": [
                "-fPIC", "-g", "Transkr.cpp", "transcrLUSS.cpp",
                "strtokf.cpp", "Skiemen.cpp",
                "Kircdb.cpp", "fv2id.cpp",
                "ArKirciuoti.cpp",
                "-shared", "-o", "../../bin/Linux_x86/libtranscrLUSS.so",
                "-Wno-write-strings"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "create output dir"
            ]
        }
    ]
